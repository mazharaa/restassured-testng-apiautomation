{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Employee",
  "description": "A employee from X company",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "query": {
        "type": "string"
      },
      "result": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "full_name": {
              "type": "string"
            },
            "department": {
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          },
          "required": ["full_name", "department", "title"]
        }
      }
    },
    "required": ["query", "result"]
  }
}
